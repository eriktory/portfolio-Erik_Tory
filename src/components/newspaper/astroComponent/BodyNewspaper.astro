---
import ArticleNewspaper from '../reactComponent/ArticleNewspaper';

// Fetch the article to get the frontmatter data
const articles = await Astro.glob('../articles/article_1.md');
const post = articles[0];
const { title } = post.frontmatter;
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700;900&display=swap" rel="stylesheet">

<div id="body" class="w-full h-full px-2 md:px-4 py-2 overflow-hidden flex flex-col" style="font-family: 'Outfit', sans-serif;">

    <!-- Box 1: Article Title (Full Width) -->
    <div id="box1" class="w-full h-auto border-b md:border-b-2 border-black flex justify-center items-center mb-3 md:mb-4 pb-2 md:pb-3 shrink-0">
        <h1 class="text-sm md:text-2xl lg:text-3xl font-bold uppercase text-center tracking-wide leading-tight whitespace-pre-line">{title}</h1>
    </div>

    <!-- Main Content Grid: Image + Article Columns (preparado para carrusel) -->
    <div class="grid grid-cols-1 md:grid-cols-8 gap-2 md:gap-2 flex-1 min-h-0 overflow-x-hidden">
        
        <!-- Box 2: Main Image (4 columns) - OCULTO EN MÓVIL -->
        <div id="box2" class="hidden md:block md:col-span-4">
            <div class="w-full h-full border border-black flex items-center justify-center bg-transparent">
                <span class="text-xl md:text-2xl font-bold text-neutral-400">MAIN IMAGE</span>
            </div>
        </div>

        <!-- Article Content Area (4 columns, fluye en múltiples columnas internas)-->
        <div id="article-columns" class="col-span-1 md:col-span-4 border-l-0 md:border-l-2 border-black pl-0 md:pl-4">
            <ArticleNewspaper client:visible />
        </div>

    </div>
</div>

<style>
/* Newspaper column layout - 2 columnas visibles */
/* Newspaper column layout - Horizontal Scroll */
#article-columns {
    column-width: 20vh;
    column-gap: 2rem;
    column-rule: 1px solid #000000;
    column-fill: auto;
    height: 100%;
    
    overflow-y: hidden;
    overflow-x: auto;
    
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
}

/* Snap alignment for article content */
#article-columns :global(> *) {
    scroll-snap-align: start;
}

/* Prevent headers and images from breaking across columns */
#article-columns :global(h1), 
#article-columns :global(h2), 
#article-columns :global(h3), 
#article-columns :global(img),
#article-columns :global(figure) {
    break-inside: avoid;
}

/* Hide scrollbar for clean "newspaper" look */
#article-columns::-webkit-scrollbar {
    display: none;
}

#article-columns {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
}
</style>