---
import ArticleNewspaper from '../reactComponent/ArticleNewspaper';

// Fetch the article to get the frontmatter data
const articles = await Astro.glob('../articles/article_1.md');
const post = articles[0];
const { title } = post.frontmatter;
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700;900&display=swap" rel="stylesheet">

<div id="body" class="w-full h-full px-2 md:px-4 py-2 overflow-hidden flex flex-col" style="font-family: 'Outfit', sans-serif;">

    <!-- Box 1: Article Title (Full Width) -->
    <div id="box1" class="w-full h-auto border-b md:border-b-2 border-black flex justify-center items-center mb-3 md:mb-4 pb-2 md:pb-3 shrink-0">
        <h1 class="text-sm md:text-2xl lg:text-3xl font-bold uppercase text-center tracking-wide leading-tight whitespace-normal md:whitespace-pre-line">{title}</h1>
    </div>

    <!-- Main Content Grid: Image + Article Columns (preparado para carrusel) -->
    <div id="main-scroll-container" class="flex flex-col md:flex-row gap-2 md:gap-4 flex-1 min-h-0 overflow-x-auto overflow-y-hidden snap-x snap-mandatory scroll-smooth">
        
        <!-- Box 2: Main Image (4 columns) - OCULTO EN MÓVIL -->
        <div id="box2" class="hidden md:block shrink-0 md:w-[50vw] h-full snap-start">
            <div class="w-full h-full border border-black flex items-center justify-center bg-transparent">
                <span class="text-xl md:text-2xl font-bold text-neutral-400">MAIN IMAGE</span>
            </div>
        </div>

        <!-- Article Content Area (4 columns, fluye en múltiples columnas internas)-->
        <div id="article-columns" class="shrink-0 h-full snap-start border-l-0 md:border-l-2 border-black pl-0 md:pl-4">
            <ArticleNewspaper client:visible />
        </div>

    </div>
</div>

<style>
/* Newspaper column layout - 2 columnas visibles */
/* Newspaper column layout - Horizontal Scroll */
#article-columns {
    column-width: 20vh;
    column-gap: 2rem;
    column-rule: 1px solid #000000;
    column-fill: auto;
    height: 100%;
    /* Width handled by JS to match content exactly */
    
    overflow-y: hidden;
    /* overflow-x handled by parent #main-scroll-container */
    
    scroll-snap-align: start;
}

/* Snap alignment for article content */
#article-columns :global(> *) {
    scroll-snap-align: start;
}

/* Prevent headers and images from breaking across columns */
#article-columns :global(h1), 
#article-columns :global(h2), 
#article-columns :global(h3), 
#article-columns :global(img),
#article-columns :global(figure) {
    break-inside: avoid;
}

/* Hide scrollbar for clean "newspaper" look */
/* Hide scrollbar for clean "newspaper" look */
#main-scroll-container::-webkit-scrollbar {
    display: none;
}

#main-scroll-container {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
}
</style>

<script>
    function adjustColumnContainerWidth() {
        const articleColumns = document.getElementById('article-columns');
        if (!articleColumns) return;

        // Reset width to allow recalculation
        articleColumns.style.width = 'auto';

        // Use Range to measure the exact width of the content distributed in columns
        const range = document.createRange();
        range.selectNodeContents(articleColumns);
        const rect = range.getBoundingClientRect();
        
        // Add a small buffer only if needed, otherwise use exact rect width
        // The rect.width from selectNodeContents usually gives the width from start of first col to end of last col
        if (rect.width > 0) {
            articleColumns.style.width = `${rect.width}px`;
        }
    }

    // Run on load and resize
    window.addEventListener('load', adjustColumnContainerWidth);
    window.addEventListener('resize', adjustColumnContainerWidth);
    
    // Also run after a slight delay to ensure fonts/images are loaded
    setTimeout(adjustColumnContainerWidth, 100);
    setTimeout(adjustColumnContainerWidth, 500);

    document.addEventListener('keydown', (e) => {
        const container = document.getElementById('main-scroll-container');
        if (!container) return;

        // No ejecutar si hay teclas modificadoras presionadas
        if (e.metaKey || e.ctrlKey || e.altKey || e.shiftKey) return;

        // Flecha Izquierda o Derecha
        if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
            e.preventDefault();

            const articleColumns = document.getElementById('article-columns');
            let scrollAmount = 0;

            if (articleColumns) {
                const style = window.getComputedStyle(articleColumns);
                const colWidth = parseFloat(style.columnWidth);
                const gap = parseFloat(style.columnGap);

                // Calcular ancho de columna (fallback a ~20vh si falla el cálculo)
                const finalColWidth = (!isNaN(colWidth) && colWidth > 0) ? colWidth : (window.innerHeight * 0.20);
                const finalGap = (!isNaN(gap) && gap >= 0) ? gap : 32; // 2rem = ~32px

                scrollAmount = finalColWidth + finalGap;
            } else {
                scrollAmount = 300; // Valor seguro por defecto
            }

            const direction = e.key === 'ArrowRight' ? 1 : -1;

            container.scrollBy({
                left: scrollAmount * direction,
                behavior: 'smooth'
            });
        }
    });
</script>