---
import ArticleNewspaper from '../reactComponent/ArticleNewspaper';

// Fetch the article to get the frontmatter data
const articles = await Astro.glob('../articles/article_1.md');
const post = articles[0];
const { title } = post.frontmatter;
---

<div id="body" class="w-full h-full px-2 md:px-4 py-2 overflow-hidden">

    <!-- Box 1: Article Title (Full Width) -->
    <div id="box1" class="w-full h-12 md:h-16 border-b md:border-b-2 border-black flex justify-center items-center mb-3 md:mb-4 pb-2 md:pb-3">
        <h1 class="text-sm md:text-2xl lg:text-3xl font-serif font-black uppercase text-center tracking-wide leading-tight">{title}</h1>
    </div>

    <!-- Main Content Grid: Image + Article Columns (preparado para carrusel) -->
    <div class="grid grid-cols-1 md:grid-cols-8 gap-2 md:gap-2 h-[calc(100%-3.75rem)] md:h-[calc(100%-5rem)] overflow-x-hidden">
        
        <!-- Box 2: Main Image (4 columns) - OCULTO EN MÓVIL -->
        <div id="box2" class="hidden md:block md:col-span-4">
            <div class="w-full h-full border-1 border-black flex items-center justify-center bg-transparent">
                <span class="text-xl md:text-2xl font-bold text-neutral-400">MAIN IMAGE</span>
            </div>
        </div>

        <!-- Article Content Area (4 columns, fluye en múltiples columnas internas)-->
        <div id="article-columns" class="col-span-1 md:col-span-4 border-l-0 md:border-l-2 border-black pl-0 md:pl-4">
            <ArticleNewspaper client:visible />
        </div>

    </div>
</div>

<style>
/* Newspaper column layout - Solo 2 columnas visibles, el resto ocultas para carrusel */
#article-columns {
    /* MÓVIL: 2 columnas visibles */
    column-count: 2;
    column-gap: 2rem;
    column-rule: 2px solid #000000;
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
}

@media (min-width: 768px) {
    #article-columns {
        /* En tablet/desktop: exactamente 2 columnas visibles */
        column-count: 2;
        column-fill: auto; /* El contenido fluye verticalmente primero */
    }
}

@media (min-width: 1024px) {
    #article-columns {
        /* En desktop: mantener 2 columnas visibles */
        column-count: 2;
    }
}

@media (min-width: 1536px) {
    #article-columns {
        /* En XL: mantener 2 columnas visibles */
        column-count: 2;
    }
}

/* Custom Scrollbar - estilo sutil */
#article-columns::-webkit-scrollbar {
    width: 4px;
}

#article-columns::-webkit-scrollbar-track {
    background: #f9fafb;
}

#article-columns::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 2px;
}

#article-columns::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
}
</style>